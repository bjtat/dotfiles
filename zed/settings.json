{
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 22,
  "buffer_line_height": "standard",
  "cursor_blink": false,
  "relative_line_numbers": true,
  "show_edit_predictions": false,
  "theme": "Catppuccin Frapp√©",
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 22,
  "vertical_scroll_margin": 10,
  "vim_mode": true,
  "current_line_highlight": "all",
  "vim": {
    "highlight_on_yank_duration": 50,
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "ruby": true
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop"]
    },
    "C++": {
      "format_on_save": "on",
      "tab_size": 2,
      // floating comp above inputs
      "show_completions_on_input": true,
      // this one shows extra info on right when doing comps
      "show_completion_documentation": false,
      "formatter": "language_server"
    },
    "Rust": {
      "show_completions_on_input": false
    }
  },
  "lsp": {
    // https://andywaite.com/2025/03/31/setting-up-zed-with-ruby-lsp.html
    // `gem install ruby-lsp` per project to ensure the version is correct for each project
    "ruby-lsp": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "enabledFeatures": {
          "onTypeFormatting": false,
          "diagnostics": false
        }
      }
    },
    "rubocop": {
      "settings": {
        "use_bundler": true
      },
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "clangd": {
      "binary": {
        "path": "/opt/homebrew/Cellar/llvm/19.1.7_1/bin/clangd",
        "arguments": []
      }
    }
  }
}
