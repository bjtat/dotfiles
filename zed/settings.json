// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Catppuccin Macchiato",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "ruby": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "buffer_font_family": "Hack Nerd Font",
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 22,
  "buffer_font_size": 22,
  "buffer_line_height": "standard",
  "vim_mode": true,
  "vim": {
    // "always": use system clipboard
    // "never": don't use system clipboard
    // "on_yank": use system clipboard for yank operations
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    // disable cursor blink
    "cursor_blink": false,
    // use relative line numbers
    "relative_line_numbers": false,
    // hide the scroll bar
    "scrollbar": { "show": "never" },
    // allow cursor to reach edges of screen
    "vertical_scroll_margin": 0,
    "gutter": {
      // disable line numbers completely:
      "line_numbers": false
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp"],
      "format_on_save": "on"
    },
    "Markdown": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "solargraph": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    "rubocop": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "safeAutocorrect": false
      }
    }
  }
}
