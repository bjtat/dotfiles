// Zed Editor Keymap Configuration
// Based on: https://stevedylan.dev/posts/leaving-neovim-for-zed/

[
  // ===== VIM MODE: NORMAL & VISUAL =====
  {
    "context": "(vim_mode == normal || vim_mode == visual) && !VimWaiting",
    "bindings": {
      // Toggle tabs
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",

      // Toggle panels
      "ctrl-/": "workspace::ToggleBottomDock",
      "space e": "workspace::ToggleLeftDock",
      "space t": "workspace::ToggleBottomDock",

      // File operations
      "space q": "pane::CloseActiveItem",
      "space shift-e": "pane::RevealInProjectPanel",

      // Search operations
      "space s g": "workspace::NewSearch",
      "space s f": "file_finder::Toggle",
      "space s k": "command_palette::Toggle",
      "space s t": "tab_switcher::Toggle",
      "space shift-s": "project_symbols::Toggle",

      // Code operations
      "gc": "vim::ToggleComments",
      "space c f": "editor::Rename",
      "space c d": "editor::GoToDiagnostic",
      "shift-k": "editor::Hover",

      // Git operations
      "space b": "git::Blame",

      // Diagnostics
      "[ d": "editor::GoToPreviousDiagnostic",
      "] d": "editor::GoToDiagnostic",

      // Navigation
      "g b": "pane::GoBack",
      "g f": "pane::GoForward",
      "g I": "editor::GoToImplementation"
    }
  },

  // ===== VIM MODE: INSERT =====
  {
    "context": "vim_mode == insert",
    "bindings": {
      // Disable space as leader key in insert mode to allow normal typing
      "space": null
    }
  },

  // ===== PANE NAVIGATION =====
  {
    "context": "Dock || Terminal || Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },

  // ===== PROJECT PANEL =====
  {
    "context": "ProjectPanel",
    "bindings": {
      "escape": "workspace::ToggleLeftDock",
      "space e": "workspace::ToggleLeftDock"
    }
  },

  // ===== TERMINAL PANEL =====
  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock",
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },

  // ===== MENU NAVIGATION =====
  {
    "context": "TabSwitcher",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious"
    }
  },
  {
    "context": "FileFinder",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious"
    }
  },
  {
    "context": "CommandPalette",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious"
    }
  },

  // ===== EMPTY PANE & SHARED SCREEN =====
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space s g": "workspace::NewSearch",
      "space s f": "file_finder::Toggle",
      "space space": "file_finder::Toggle",
      "space s k": "command_palette::Toggle"
    }
  }
]
