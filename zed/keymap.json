[
  {
    // TODO: might be a simpler context to put this in
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && VimControl",
    "bindings": {
      // Put key bindings here if you want them to work in normal & visual mode.
      "space /": "workspace::NewSearch",
      "space d n": "editor::GoToPrevDiagnostic",
      "space d o": "editor::GoToDiagnostic",
      "space d w": "diagnostics::ToggleWarnings",
      "space s f": "file_finder::Toggle",
      "space s t": "tab_switcher::Toggle",
      "space q": "pane::CloseActiveItem",
      "space e": "project_panel::ToggleFocus",
      "space shift-e": "pane::RevealInProjectPanel",
      "space shift-s": "project_symbols::Toggle",
      "space space": "command_palette::Toggle",
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // make it so I can close out the file tree with the same keymap
      "ctrl-/": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      // make it so I can close out the file tree with the same keymap
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      // I null out space in insert mode or else I can't type due to using it as a leader key in other spots
      "space": null
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Put key bindings here (in addition to the context above) if you want them to
      // work when no editor exists.
    }
  }
]
